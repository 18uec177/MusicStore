

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicStore</title>
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    

    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MusicStore</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav justify-content-end">
                        @*flex-grow-1*@
                        @*flex-row-reverse*@


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="border-right: 1px solid; border-color: darkgrey;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Index" style="border-right: 1px solid; border-color: darkgrey;">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="StoreManager" asp-action="Index" style="border-right: 1px solid; border-color: darkgrey;">Store</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCart" asp-action="Index" style="border-right: 1px solid; border-color: darkgrey;">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" style="border-right: 1px solid; border-color: darkgrey;">Admin</a>
                        </li>
                        <partial name="_LoginInfo" />
                        @*@await Html.PartialAsync("_LoginPartial")*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row flex">
            <div class="col-2">
                <ul class="nav flex-column" styel="border-right: 1px solid; border-color: darkgrey;">

                    @*@foreach (var genre in Model)
                        {
                            <li>@Html.ActionLink(genre.Name, "Browse", new { genre = genre.Name })</li>

                        }*@



                    <li class="nav-item">
                        <a class="nav-link active" href="/Store/Browse/1" style="color:grey;">Jazz</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Store/Browse/2" style="color:grey;">Rock</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Store/Browse/3" style="color:grey;">Metal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/Store/Browse/4" style="color:grey;">Alternative</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link " href="/Store/Browse/5" style="color:grey;">Disco</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/Store/Browse/6" style="color:grey;">Blues</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/Store/Browse/7" style="color:grey;">Latin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/Store/Browse/8" style="color:grey;">Reggae</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/Store/Browse/9" style="color:grey;">Pop</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link " href="#" style="color:grey;">Classical</a>
                    </li>




                </ul>

            </div>

            <div class="col-10">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container">
            &copy; 2022 - MusicStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
