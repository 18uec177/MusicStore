@model AlbumModel

<div class="card mb-4 shadow-sm">
    <img src="/images/music.jpg" class="img-thumbnail" />
    <div class="card-body d-flex justify-content-between align-items-center">
        <a href="/store/details/@Model.AlbumId" class="h3 card-text card-link text-success">@(string.IsNullOrEmpty(Model.Title) ? "Name is not available" : Model.Title)</a>



        <small class="text-muted">@(string.IsNullOrEmpty(@Model.Artist) ? "NA" : Model.Artist)</small>


    </div>
</div>