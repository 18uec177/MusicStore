<div class="row">
    <div class="col-lg-12">
        @*<a href="#" class="btn btn-primary">Create New</a>*@
        <partial name="_album" />
    </div>

    <div class="col-lg-12">
        <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>AlbumArtUrl</th>
                    <th>Gemre</th>
                    <th>Artist</th>
                </tr>
            </thead>
        </table>

    </div>
</div>


<div class="modal fade" id="exampleModalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">


                <div class="row">
                    <div class="col-lg-3">
                        <label>Id</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-group">
                            <input id="Id" disabled="disabled" class="form-control" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <label>Title</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-group">
                            <input id="Title" class="form-control" autocomplete="off" />
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <label>Price</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-group">
                            <input id="Price" class="form-control" autocomplete="off" />
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <label>AlbumArtUrl</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-group">
                            <input id="AlbumArtUrl" class="form-control" autocomplete="off" />
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <label>Genre</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-group">
                            <select id="Genre" class="form-control" asp-items="ViewBag.GenreId" autocomplete="off"></select>
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <label>Artist</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-group">
                            <select id="Artist" class="form-control" asp-items="ViewBag.ArtistId" autocomplete="off"></select>
                        </div>
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn btn-primary" onclick="UpdateAlbum();" id="btnUpdate">Edit</button>
            </div>

        </div>
    </div>
</div>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/custom.js"></script>