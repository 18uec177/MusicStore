@{ ViewBag.Title = "Details"; }

<div class="container">
    <h3 class="display-4"> Album Details</h3>
    <div class="row">
        <div class="col-md-4">
            <img src="~/images/music.jpg" />
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-pimary">By:</span>
                    <span class="monospaced">@Model.Artist</span>
                </div>
            </div>


            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-success" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-Id="@Model.AlbumId">Add to Cart</a>

                </div>
            </div>

            <hr />

            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold"> Price - </span> @Model.Price</li>
                <li class="list-group-item"><span class="font-weight-bold"> Genre- </span> @Model.Genre</li>

            </ul>
        </div>
    </div>

</div>